# Server Configuration
PORT=8080
ENV=production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/zgenai?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Credentials
ADMIN_EMAIL=admin@zgenai.com
ADMIN_PASSWORD=Admin@123

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=zgenai-uploads
GCP_REGION=us-central1

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@zgenai.org

# CORS Configuration
ALLOWED_ORIGINS=https://www.zgenai.org,https://zgenai.org

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
